    <target name="-download-check-exists">
        <available property="file.exists" file="lib/${target}"/>
    </target>
    
    <target name="-download" depends="-download-check-exists" unless="file.exists">
        <dirname property="dir" file="lib/${target}" />
        <mkdir dir="${dir}" />
        <get src="${url}" dest="lib/${target}" usetimestamp="true"/>
